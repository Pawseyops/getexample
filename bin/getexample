#!/bin/bash
#DESCRIPTION Download user examples
#LABEL Files
hostid=`echo $HOST | cut -d "-" -f 1`
echo ${hostid}
if [ ${hostid} == "magnus" ]; then 
    location=/home/cbording/Intern_project/getexample/magnus_examples
elif [ ${hostid} == "zeus" ]; then
    location=/group/interns2016/getexample/zeus_examples
fi

#  Define getexample dir
GE_DIR=/group/interns2016/getexample/src 
  
#TODO Make a list of users downloading examples?

#Display help message if no example is given
if [ "$1" == "" ]; then
	echo "Download an HPC example:"
	echo "usage:"
	echo "   getexample <examplename>"
	echo ""
	echo "Where <examplename> is the name of the example you want to "
	echo "download.  This will create a directory named examplename which"
	echo "you can cd into and hopefully read the README file (if one is"
	echo "avaliable) or just submit the *.qsub file."
	echo ""
	echo "For Example:"
	echo "  getexample helloworld"
	echo ""
	echo "Possible example names:"
	ls $location 
	exit 0
else
temp_project_id=`echo $MYGROUP | cut -d "/" -f 3`
if [[ ! -f /home/cbording/Intern_project/ge.log ]]; then 
   touch /home/cbording/Intern_project/ge.log
fi
# date +%d/%m/%y
echo " $1 $USER "$temp_project_id" `date +%F`" >> /home/cbording/Intern_project/ge.log

fi


#TODO Check to see if folder already exists
cp -r -v -u ${location}/$1 .
